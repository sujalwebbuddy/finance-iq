{
  "version": 2,
  "functions": {
    "server.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/server.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/recurring-transactions?secret=CRON_SECRET",
      "schedule": "0 0 * * *"
    }
  ],
  "env": {
    "IS_VERCEL": "true"
  }
}